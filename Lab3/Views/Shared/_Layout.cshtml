<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnookerClub</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SnookerClub</a>
                <div class="collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Snooker">Snooker Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Snooker/GetAllPlayers">View All Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Snooker/GetAllMatches">View All Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">Table Reservation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HallOfFame" asp-action="Index">Hall of Fame</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - SnookerClub
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
